.PHONY: all install clean

all: sampleObserver2.bin

%.o: %.cc
	$(CXX) $(CXXFLAGS) -o $@ -c $^

SampleObserverStub.cc: stub.cfg
	$(STUBGEN) $^

sampleObserver2.bin: SampleObserverStub.o SampleObserver.o $(OCF)
	$(MKBIN) $(MKBINFLAGS) -o $@ $^ $(LIBS)
	$(STRIP) $@

install: sampleObserver2.bin
	$(CP) $^ $(INSTALLDIR)/OPEN-R/MW/OBJS/OBS2.BIN

clean:
	rm -f *.o *.bin *.elf *.snap.cc
	rm -f SampleObserverStub.h SampleObserverStub.cc def.h entry.h
	rm -f $(INSTALLDIR)/OPEN-R/MW/OBJS/OBS2.BIN
